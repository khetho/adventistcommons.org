{% extends "email/template.html.twig" %}

{% block content %}
	<p style="font-size: 13px; margin: 10px 0;"><span style="color:#444444">Hello, {{ user.fullName }} </span></p>
	<p>Thank you for joining us! In order to be able to login, your first need to confirm that this is your email address. </p>

	<table border="0" cellpadding="0" cellspacing="0" role="presentation" style="border-collapse:separate;line-height:100%;margin:auto;">
		<tr>
			<td align="center" bgcolor="#414141" role="presentation" style="border:none;border-radius:3px;cursor:auto;padding:10px 25px;background:#414141;" valign="middle">
				<a href="{{ activationUrl }}" style="background:#414141;color:#ffffff;font-family:Arial, sans-serif;font-size:13px;font-weight:normal;line-height:120%;Margin:0;text-decoration:none;text-transform:none;" target="_blank">Activate account</a>
			</td>
		</tr>
	</table>
{% endblock %}