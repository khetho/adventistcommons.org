{% extends "utility_template.html.twig" %}

{% block content %}
    <h1 class="h2">Welcome Back &#x1f44b;</h1>
    <p class="lead">Log in to your account to continue</p>
    {% if message is defined and message %}
        <div class="alert alert-warning">{{ message|raw }}</div>
    {% endif %}

    <form method="post" data-loading-text="loading...">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-group">
            <input class="form-control" name="identity" type="email" placeholder="Email Address" autofocus />
        </div>
        <div class="form-group">
            <input class="form-control" type="password" placeholder="Password" name="password" />
            <div class="text-right">
                <small><a href="/forgot_password">Forgot password?</a>
                </small>
            </div>
        </div>
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-block btn-primary" role="button" type="submit">
            Log in
        </button>
        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <small>Don't have an account yet? <a href="register">Create one</a>
        </small>
    </form>
{% endblock %}
