{% extends "html.html.twig" %}

{% block body %}
    <div class="layout layout-nav-top">
        <div class="navbar navbar-expand-lg bg-dark navbar-dark sticky-top">
            <a class="navbar-brand" href="{{ path('app_about_home') }}">
                <img src="/assets/img/logo_text.png" height="40" />
            </a>
            {% include 'common/_menu_header.html.twig' %}
        </div>
        <div class="main-container">
            {% block contentHeader %}
            {% endblock %}
            {% block breadcrumb %}
                {% include 'common/_breadcrumbs.html.twig' %}
            {% endblock %}
            {% include 'common/_messages.html.twig' %}
            {% block content %}{% endblock %}
        </div>
    </div>
    <footer class="text-small text-faded text-center p-3">
        <div class="col-md-12">
            <img class="footer-logo" src="/assets/img/sda-logo.png">
        </div>
        <div class="mt-2">
            {% trans %}commons.footer.desc{% endtrans %}
            <br />
        </div>
        <div class="mt-2">
            <a href="{{ path('app_feedback_send') }}">{% trans %}commons.footer.feedback{% endtrans %}</a> |
            <a href="{{ path('app_feedback_send') }}">{% trans %}commons.footer.report{% endtrans %}</a>
        </div>
    </footer>
{% endblock %}
