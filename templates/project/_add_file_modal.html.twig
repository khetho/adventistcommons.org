{% extends 'bootstrap/_modal.html.twig' %}

{% block id %}add-file-{{ project.language.code }}-form{% endblock %}

{% block form_start %}
	{{ form_start(addAttachmentForm, {'action': pathToProject(project, 'attachment_add')}) }}
{% endblock %}

{% block title %}{% trans %}product.add_file.header{% endtrans %}{% endblock %}

{% block body %}
	{{ form_row(addAttachmentForm.fileType, {'attr': {'class': 'selectize'}}) }}
	{{ form_row(addAttachmentForm.file) }}
	{{ form_rest(addAttachmentForm) }}
{% endblock %}

{% block submitLabel %}{% trans %}product.add_file.submit{% endtrans %}{% endblock %}

{% block form_end %}
	{{ form_end(addAttachmentForm) }}
{% endblock %}

