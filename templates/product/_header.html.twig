<div class="page-header clearfix">
	<img src="{{ coverPath }}{{ product.coverImageFilename }}" width="140" class="float-left mr-3 rounded">
	<div class="d-flex justify-content-between align-items-center">
		<h2>{{ product.name }}</h2>
		{% if is_granted('ROLE_ADMIN') %}
			<div class="btn-group float-right" role="group" aria-label="Admin actions">
				{% if product.enabled %}
					<a href="{{ pathToProduct(product, 'disable') }}" class="btn btn-sm btn-secondary">
						<i class="fas fa-eye"></i> {% trans %}product.show.disable{% endtrans %}
					</a>
				{% else %}
					<a href="{{ pathToProduct(product, 'enable') }}" class="btn btn-sm btn-primary">
						<i class="fas fa-eye"></i> {% trans %}product.show.enable{% endtrans %}
					</a>
				{% endif %}
				<a href="{{ path('app_product_edit', {'slug': product.slug}) }}" class="btn btn-sm btn-primary">
					<i class="fas fa-pen"></i> {% trans %}product.show.edit{% endtrans %}
				</a>
			</div>
		{% endif %}
	</div>
	{% if not product.enabled %}
		<i class="fas fa-eye-slash fa-pull-right fa-3x"></i>
	{% endif %}
	<p>{{ product.description }}</p>
	{% if product.type %}
		<span class="text-small pr-2"><strong>{% trans %}product.show.type{% endtrans %}</strong>: {{ product.type|capitalize }}</span>
	{% endif %}
	{% if product.author %}
		<span class="text-small pr-2"><strong>{% trans %}product.show.author{% endtrans %}</strong>: {{ product.author }}</span>
	{% endif %}
	{% if product.pageCount %}
		<span class="text-small pr-2"><strong>{% trans %}product.show.page_count{% endtrans %}</strong>: {{ product.pageCount }}</span>
	{% endif %}
</div>
