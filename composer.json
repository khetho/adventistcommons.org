{
    "name": "adventistcommons/adventistcommons",
    "description": "Online tool for collaborative translation",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-xml": "*",
        "api-platform/api-pack": "^1.2",
        "beberlei/doctrineextensions": "^1.2",
        "codeigniter/framework": "3.1.10",
        "doctrine/doctrine-migrations-bundle": "^2.0",
        "facebook/graph-sdk": "^5.7",
        "google/cloud-translate": "^1.2",
        "hybridauth/hybridauth": "~3.0",
        "indesign/php-idml": "dev-master",
        "knplabs/dictionary-bundle": "^3.0",
        "knplabs/knp-paginator-bundle": "^5.0",
        "knpuniversity/oauth2-client-bundle": "^1.31",
        "league/oauth2-facebook": "^2.0",
        "league/oauth2-google": "^3.0",
        "lexik/jwt-authentication-bundle": "^2.6",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/flex": "^1.3.1",
        "symfony/form": "4.3.*",
        "symfony/framework-bundle": "*",
        "symfony/mailer": "4.3.*",
        "symfony/security": "4.3.*",
        "symfony/serializer": "4.3.*",
        "symfony/translation": "4.3.*",
        "symfony/webpack-encore-bundle": "^1.7",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpmd/phpmd": "^2.7",
        "phpspec/phpspec": "^6.1",
        "sentry/sdk": "2.0.3",
        "symfony/browser-kit": "4.3.*",
        "symfony/css-selector": "4.3.*",
        "symfony/maker-bundle": "^1.14",
        "symfony/phpunit-bridge": "^5.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "^4.3"
    },
    "config": {
        "platform": {
            "php": "7.2"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "AdventistCommons\\": "domain/",
            "App\\": "src/"
         }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "bin/install-git-hooks",
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "bin/install-git-hooks",
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
