{
    "name": "adventistcommons/adventistcommons",
    "description": "Online tool for collaborative translation",
    "type": "project",
    "config": {
        "platform": {
            "php": "7.2"
        }
    },
    "require": {
        "google/cloud-translate": "^1.2",
        "kenjis/codeigniter-ss-twig": "^0.4.0",
        "indesign/php-idml": "dev-master",
        "robmorgan/phinx": "^0.10.7",
        "codeigniter/framework": "3.1.10",
        "facebook/graph-sdk": "^5.7",
        "hybridauth/hybridauth": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "AdventistCommons\\": "src/"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^4.3",
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpmd/phpmd": "^2.7",
        "sentry/sdk": "2.0.3"
    },
    "scripts": {
        "post-install-cmd": [
            "bin/install-git-hooks"
        ],
        "post-update-cmd": [
            "bin/install-git-hooks"
        ]
    }
}
