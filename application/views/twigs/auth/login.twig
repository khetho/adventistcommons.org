{% extends "twigs/utility_template.twig" %}

{% block content %}
	<h1 class="h2">Welcome Back &#x1f44b;</h1>
	<p class="lead">Log in to your account to continue</p>
	{% if message %}
		<div class="alert alert-warning">{{ message|raw }}</div>
	{% endif %}

	<form action="login" method="post" data-loading-text="loading...">
		<div class="form-group">
			<input class="form-control" name="identity" type="email" placeholder="Email Address" />
		</div>
		<div class="form-group">
			<input class="form-control" type="password" placeholder="Password" name="password" />
			<div class="text-right">
				<small><a href="/forgot_password">Forgot password?</a>
				</small>
			</div>
		</div>
		<button class="btn btn-lg btn-block btn-primary" role="button" type="submit">
			Log in
		</button>
		<small>Don't have an account yet? <a href="register">Create one</a>
		</small>
	</form>

	{# Social Login #}
	<div class="social-auth">
		<div class="hl">
        	<span class="hl-innertext">OR</span>
      	</div>

		<div class="buttons-container">
			<a href="{{ facebook_login_url }}" class="fb btn btn-lg btn-block btn-primary social-login">
				<i class="fa fa-facebook-official"></i>Login with Facebook
			</a>
			<a href="{{ site_url('hauth/login/Google')}}" class="google btn btn-lg btn-block btn-primary social-login">
				<i class="fa fa-google fa-fw"></i>Login with Google+
			</a>
			<a href="{{ site_url('hauth/login/Twitter')}}" class="twitter btn btn-lg btn-block btn-primary social-login">
				<i class="fa fa-twitter fa-fw"></i>Login with Twitter
			</a>
		</div>

		<div class="register-disclaimer">
			<small>By creating an account through social media <br/> you agree to our <a href="/termsOfUse" target="_blank">Terms of Use</a>
		</small>
		</div>
	</div>

{% endblock %}
